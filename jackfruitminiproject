class HangmanFrame(wx.Frame):
    def __init__(self):
        super().__init__(None, title="üíÄ THE ULTIMATE MOVIE HANGMAN üíÄ", size=(790, 775))
        panel = wx.Panel(self)
        panel.SetBackgroundColour("#0a0f1f")
        self.SetBackgroundColour("#0a0f1f")
        title = wx.StaticText(panel, label="üé¨ THE ULTIMATE MOVIE HANGMAN üéÆ", style=wx.ALIGN_CENTER)
        title.SetFont(wx.Font(28, wx.FONTFAMILY_DEFAULT, wx.FONTSTYLE_NORMAL, wx.FONTWEIGHT_BOLD))
        title.SetForegroundColour("#00f3ff")
        self.blanks = wx.StaticText(panel, label="", style=wx.ALIGN_CENTER)
        self.blanks.SetFont(wx.Font(26, wx.FONTFAMILY_MODERN, wx.FONTSTYLE_NORMAL, wx.FONTWEIGHT_BOLD))
        self.blanks.SetForegroundColour("#D705F2")
        self.chances_remaining = wx.StaticText(panel, label="Chances left: 6", style=wx.ALIGN_CENTER)
        self.chances_remaining.SetForegroundColour("#1C3AFF")
        self.chances_remaining.SetFont(wx.Font(18, wx.FONTFAMILY_DEFAULT, wx.FONTSTYLE_NORMAL, wx.FONTWEIGHT_BOLD))
        self.guessed_letters = wx.StaticText(panel, label="Guessed:", style=wx.ALIGN_CENTER)
        self.guessed_letters.SetForegroundColour("#FF1CC0")
        self.guessed_letters.SetFont(wx.Font(18, wx.FONTFAMILY_DEFAULT, wx.FONTSTYLE_NORMAL, wx.FONTWEIGHT_BOLD))
        self.hint_label = wx.StaticText(panel, label="Hint:", style=wx.ALIGN_CENTER)
        self.hint_label.SetForegroundColour("#9B30FF")
        self.hint_label.SetFont(wx.Font(18, wx.FONTFAMILY_DEFAULT, wx.FONTSTYLE_NORMAL, wx.FONTWEIGHT_BOLD))
        self.message = wx.StaticText(panel, label="", style=wx.ALIGN_CENTER)
        self.message.SetFont(wx.Font(22, wx.FONTFAMILY_DEFAULT, wx.FONTSTYLE_NORMAL, wx.FONTWEIGHT_BOLD))
        self.message.SetForegroundColour("#D811F0")

        self.stage_label = wx.StaticText(panel, label="", style=wx.ALIGN_CENTER_HORIZONTAL)
        self.stage_label.SetFont(wx.Font(14, wx.FONTFAMILY_MODERN, wx.FONTSTYLE_NORMAL, wx.FONTWEIGHT_BOLD))
        self.stage_label.SetForegroundColour("#00f3ff")
        border = wx.StaticBox(panel, label="THE EXECUTION CHAMBER", style=wx.ALIGN_CENTER)
        border.SetForegroundColour("#9B30FF")
        border.SetFont(wx.Font(12, wx.FONTFAMILY_DEFAULT, wx.FONTSTYLE_NORMAL, wx.FONTWEIGHT_BOLD))
        border.SetMinSize((550, 300))
        stage_box = wx.StaticBoxSizer(border, wx.VERTICAL)
        stage_box.Add(self.stage_label, 0, wx.ALIGN_CENTER | wx.ALL, 20)
        self.input_box = wx.TextCtrl(panel, style=wx.TE_CENTER)
        self.input_box.SetMinSize((80, 35))
        self.input_box.SetBackgroundColour("#11162b")
        self.input_box.SetForegroundColour("#00f3ff")
        self.input_box.SetFont(wx.Font(18, wx.FONTFAMILY_DEFAULT, wx.FONTSTYLE_NORMAL, wx.FONTWEIGHT_BOLD))
        self.guess_button = wx.Button(panel, label="PLAY üïπ")
        self.hint_button = wx.Button(panel, label="HINT üß©")
        for btn in [self.guess_button, self.hint_button]:
            btn.SetBackgroundColour("#1f0033")
            btn.SetForegroundColour("#9B30FF")
            btn.SetFont(wx.Font(14, wx.FONTFAMILY_DEFAULT, wx.FONTSTYLE_NORMAL, wx.FONTWEIGHT_BOLD))
            btn.SetWindowStyleFlag(wx.BORDER_NONE)
        main_sizer = wx.BoxSizer(wx.VERTICAL)
        main_sizer.Add(title, 0, wx.ALIGN_CENTER | wx.TOP | wx.BOTTOM, 20)
        main_sizer.Add(self.blanks, 0, wx.ALIGN_CENTER | wx.TOP, 20)
        main_sizer.Add(self.chances_remaining, 0, wx.ALIGN_CENTER | wx.TOP, 10)
        main_sizer.Add(self.guessed_letters, 0, wx.ALIGN_CENTER | wx.TOP, 8)
        main_sizer.Add(self.hint_label, 0, wx.ALIGN_CENTER | wx.TOP, 8)
        main_sizer.Add(self.message, 0, wx.ALIGN_CENTER | wx.TOP, 10)
        main_sizer.Add(stage_box, 0, wx.ALIGN_CENTER | wx.TOP, 25)
        input_sizer = wx.BoxSizer(wx.HORIZONTAL)
        input_sizer.Add(self.input_box, 0, wx.RIGHT, 10)
        input_sizer.Add(self.guess_button, 0, wx.RIGHT, 10)
        input_sizer.Add(self.hint_button, 0) 
        main_sizer.Add(input_sizer, 0, wx.ALIGN_CENTER | wx.TOP, 30)
        panel.SetSizer(main_sizer)
        self.guess_button.Bind(wx.EVT_BUTTON, self.on_guess)
        self.hint_button.Bind(wx.EVT_BUTTON, self.on_hint)
        self.movie_pool = random.sample(movies, len(movies))
        self.start_game()

    def start_game(self):
        if not self.movie_pool:
            self.movie_pool = random.sample(movies, len(movies))
        self.chosen_movie = self.movie_pool.pop()
        self.chosen_word = self.chosen_movie["title"].lower()
        self.guessed_list = []
        self.chances = 6
        self.hints_used = 0
        display = ""
        for letter in self.chosen_word:
            display += "  " if letter == " " else "_ "
        self.blanks.SetLabel(display)
        self.chances_remaining.SetLabel("Chances left: 6")
        self.guessed_letters.SetLabel("Guessed: ")
        self.hint_label.SetLabel("Hint: ")
        self.message.SetLabel("")
        self.stage_label.SetLabel(stages[self.chances].strip("\n"))
        self.Layout()

    def on_guess(self, event):
        guess = self.input_box.GetValue().lower()
        self.input_box.SetValue("")
        if len(guess) != 1 or not guess.isalpha():
            self.message.SetLabel("Please enter a single letter.")
            return
        if guess in self.guessed_list:
            self.message.SetLabel("You already guessed that letter.")
            return
        self.guessed_list.append(guess)
        self.guessed_letters.SetLabel("Guessed: " + ", ".join(self.guessed_list))
        display = ""
        correct_guess = False
        for letter in self.chosen_word:
            if letter == " ":
                display += "  "
            elif letter in self.guessed_list:
                display += letter + " "
                if letter == guess:
                    correct_guess = True
            else:
                display += "_ "
        self.blanks.SetLabel(display)
        if not correct_guess:
            self.chances -= 1
            self.message.SetLabel("Wrong guess!")
        else:
            self.message.SetLabel("Good guess!")
        self.chances_remaining.SetLabel(f"Chances left: {self.chances}")
        self.stage_label.SetLabel(stages[self.chances])
        if "_" not in display:
            self.message.SetLabel("YOU WON!! ")
            self.guess_button.Disable()
            self.hint_button.Disable()
            return
        if self.chances == 0:
            self.message.SetLabel(f"You lost! The movie was: {self.chosen_word}")
            self.blanks.SetLabel(self.chosen_word)
            self.guess_button.Disable()
            self.hint_button.Disable()

    def on_hint(self, event):
        if self.hints_used == 0:
            self.hint_label.SetLabel("Hint: Genre ‚Üí " + self.chosen_movie["genre"])
            self.hints_used += 1
        elif self.hints_used == 1:
            self.hint_label.SetLabel("Hint: Year ‚Üí " + str(self.chosen_movie["year"]))
            self.hints_used += 1
        else:
            self.hint_label.SetLabel("Hint: No hints remaining ")

app = wx.App()
frame = HangmanFrame()
frame.Show()
app.MainLoop()